hero.stats.health = 100
hero.stats.mana = 50
hero.inventory = ["sword", "potion"]

companion = Character("Lyra")
companion.stats.health = 80
companion.stats.mana = 70
companion.inventory = ["staff", "scroll"]

party = [hero, companion]
